#!/bin/bash
# Autor: Arturo Martín Romero - amartinromero@gmail.com - programa de software libre
# postinst script for vx-dga-l-visor-imagenes-predeterminado
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
	configure)

if test -f /usr/share/applications/shotwell-viewer.desktop ; then
	# En /usr/share/applications/defaults.list estan todas las aplicaciones predeterminadas por defecto
	## En este archivo aparece como visor predeterminado a eog.desktop
	# Las predeterminadas por usuario estan en /etc/skel/.local/share/applications/mimeapps.list 
	## y $HOME/.local/share/applications/mimeapps.list
	## Establecemos como Visor de Imágenes por defecto: shotwell-viewer.desktop
	RUTAMIMES=".local/share/applications/mimeapps.list"
	for RUTA in "/etc/skel" $(getent passwd | awk -F ":" '{if ( $3 > 999 && $7~/\/bin\/.*/) {print $6}}') ; do
		if test -f ${RUTA}/${RUTAMIMES} ; then
			for LINEA in $(cat /usr/share/applications/defaults.list \
				| grep eog.desktop \
				| sed -e 's/eog.desktop/shotwell-viewer.desktop/g') ; do
					TIPOMIME="$(echo ${LINEA} | cut -d'=' -f1)"
					sed -i "\#${TIPOMIME}=#d" ${RUTA}/${RUTAMIMES}
					sed -i "/Default Applications/a ${LINEA}" ${RUTA}/${RUTAMIMES}
					sed -i "/Added Associations/a ${LINEA}" ${RUTA}/${RUTAMIMES}
			done
		fi
	done
fi

	;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

